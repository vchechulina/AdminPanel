<Window x:Class="AdminPanel.ConfirmExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Підтвердження виходу" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#333333"
        Foreground="White"
        BorderBrush="#741FAD"
        BorderThickness="1"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ви дійсно хочете вийти?" FontSize="16" FontWeight="SemiBold" Foreground="White"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button IsCancel="True" Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="White" BorderBrush="#741FAD" Margin="0,0,8,0" Content="Ні"/>
            <Button IsDefault="True" Style="{StaticResource MaterialDesignRaisedButton}" Background="#741FAD" Foreground="White" Content="Так" Click="YesButton_Click"/>
        </StackPanel>
    </Grid>
</Window>