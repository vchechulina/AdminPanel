<Window x:Class="AdminPanel.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Додати користувача" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#333333">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Додати нового користувача" FontSize="20" FontWeight="Bold" Margin="0,0,0,16" Foreground="White"/>

        <TextBox x:Name="FirstNameTextBox" Grid.Row="1" materialDesign:HintAssist.Hint="Ім'я" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,8" Foreground="White"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="2" materialDesign:HintAssist.Hint="Прізвище" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,8" Foreground="White"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="3" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,8" Foreground="White"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="4" materialDesign:HintAssist.Hint="Пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="0,0,0,8" Foreground="White"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="5" materialDesign:HintAssist.Hint="Роль" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,16" Foreground="White"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="Скасувати" IsCancel="True" Margin="0,0,8,0" Foreground="White"/>
            <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="Додати" Background="#741FAD" Click="AddButton_Click" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>