<Window x:Class="AdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Адмін-панель" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized">
    <Border Background="#333333"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#741FAD" CornerRadius="10,10,0,0" MouseLeftButtonDown="DragWindow">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White" Padding="3 0" Margin="0 0 2 0" Click="MinimizeWindow" Height="25" Width="30">
                            <materialDesign:PackIcon Kind="WindowMinimize" VerticalAlignment="Center" Height="14" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White" Padding="3 0" Margin="0 0 2 0" Click="MaximizeWindow" Height="25" Width="30">
                            <materialDesign:PackIcon Kind="WindowMaximize" VerticalAlignment="Center" Height="14" Width="14"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White" Padding="3 0" Click="CloseWindow" Height="25" Width="30">
                            <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Height="14" Width="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0"
                    Background="#741FAD"
                    CornerRadius="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind="ShieldAccount" Width="35" Height="35" Foreground="White"/>
                        <TextBlock Text="Access Control"
                                   Foreground="White"
                                   FontSize="18" FontWeight="SemiBold"
                                   Margin="10,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <Border BorderBrush="#FFF" BorderThickness="0,0,0,2" Margin="10"/>

                        <Button x:Name="BtnUsers" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" FontSize="16" Height="45" Margin="5,5,5,0" Click="NavigateToUsers" materialDesign:ButtonAssist.CornerRadius="8" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Користувачі" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnRoles" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" FontSize="16" Height="45" Margin="5,5,5,0" Click="NavigateToRoles" materialDesign:ButtonAssist.CornerRadius="8" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="AccountTie" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Ролі" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnAccess" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" FontSize="16" Height="45" Margin="5,5,5,0" Click="NavigateToAccessRights" materialDesign:ButtonAssist.CornerRadius="8" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Security" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Права доступу" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnHistory" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" FontSize="16" Height="45" Margin="5,5,5,20" Click="NavigateToHistory" materialDesign:ButtonAssist.CornerRadius="8" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="History" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Історія" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Grid.Row="2"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            FontSize="16" Height="45" Margin="10,10,10,10"
                            Click="Logout_Click"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left" materialDesign:ButtonAssist.CornerRadius="8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="Logout" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="Вийти" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1"
                    Background="#212121"
                    CornerRadius="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,20,10">
                        <materialDesign:PackIcon Kind="AccountCircle" Width="30" Height="30" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Адмін" Foreground="White" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>